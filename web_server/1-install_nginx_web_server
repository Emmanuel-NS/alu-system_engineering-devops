#!/usr/bin/env bash
# Script to install and configure Nginx web server

# Update package lists
apt-get update

# Install Nginx with -y flag to auto-confirm
apt-get install -y nginx

# Configure Nginx to listen on port 80 (default)
# This is already the default configuration, but we'll ensure it's correct

# Create a simple HTML page containing "Holberton School"
echo "Holberton School" > /var/www/html/index.html

# Check if Nginx configuration is valid
nginx -t

# Restart Nginx (without using systemctl)
service nginx restart

exit 0